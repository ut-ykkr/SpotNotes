<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_reminders_list">

    <fragment
        android:id="@+id/navigation_reminders_list"
        android:name="org.menhera.spotnotes.ui.reminders_list.RemindersFragment"
        android:label="Reminders"
        tools:layout="@layout/fragment_reminders_list" />

    <fragment
        android:id="@+id/navigation_records_list"
        android:name="org.menhera.spotnotes.ui.records_list.RecordsFragment"
        android:label="Records"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="org.menhera.spotnotes.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_records_list" />
